<%= form_with scope: :restaurant, url: restaurants_path, local: true do |f| %>

  <div class="field">
    <%= f.label :restaurant %>
    <%= f.text_field :restaurant %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>

<% end %>
