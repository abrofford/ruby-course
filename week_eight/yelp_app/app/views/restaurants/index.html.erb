<p id="notice"><%= notice %></p>

<h1>Restaurants Reviewed</h1>
  <%= link_to 'New Restaurant', new_restaurant_path %>
<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Comment</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant %></td>
        <td><%= restaurant.comment %></td>
        <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(@restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you certain?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
